<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="@dimen/s40dp"
        android:layout_height="@dimen/s40dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/s10dp"
        android:layout_marginTop="@dimen/s10dp"
        android:backgroundTint="@color/white"
        android:padding="@dimen/s10dp"
        android:src="@drawable/back_button" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/back_button"
        android:layout_height="match_parent">

        <com.affluencesystems.insurancetelematics.common.Utils.TouchToZoomImageView
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:foregroundGravity="center"
            android:transitionName="@string/app_name" />

    </RelativeLayout>



</RelativeLayout>