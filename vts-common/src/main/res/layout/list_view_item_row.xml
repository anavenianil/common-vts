<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/s60dp"
    android:layout_margin="@dimen/s10dp"
    android:minHeight="?android:attr/listPreferredItemHeightSmall">
    <View
        android:layout_width="match_parent"
        android:background="@color/black"
        android:id="@+id/line"
        android:layout_alignParentTop="true"
        android:layout_height="@dimen/s2dp"/>

    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_width="@dimen/s50dp"
        android:tint="@color/orange"
        android:layout_below="@+id/line"
        android:layout_alignParentBottom="true"
        android:src="@drawable/home_icon"
        android:layout_height="@dimen/s50dp"
        android:padding="@dimen/s15dp" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/arrow"
        android:layout_toRightOf="@+id/imageViewIcon"
        android:text="Item Name"
        android:textSize="@dimen/s18sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@android:color/black"
        />


    <ImageView
        android:id="@+id/arrow"
        android:layout_width="@dimen/s20dp"
        android:tint="@color/black"
        android:layout_below="@+id/line"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/s5dp"
        android:src="@drawable/right_arrow"
        android:layout_height="@dimen/s10dp"
        android:padding="4dp" />




</RelativeLayout>



