<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/s5dp"
    android:layout_marginRight="@dimen/s5dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/notification_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/theme"
        android:textSize="@dimen/s20sp"
        android:visibility="visible" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80"
        android:layout_below="@+id/notification_date"
        android:layout_marginLeft="@dimen/s5dp"
        android:layout_marginTop="@dimen/s5dp"
        android:layout_marginRight="@dimen/s5dp"
        android:layout_marginBottom="@dimen/s10dp"
        app:cardCornerRadius="@dimen/s5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_top_10dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="@dimen/s22sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:maxLines="1"
                android:textSize="@dimen/s15dp"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:padding="@dimen/s5dp"
                />

            <TextView
                android:id="@+id/notification_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Titlgfghhhhhhe"
                android:textColor="@color/black"
                android:textSize="@dimen/s16sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>