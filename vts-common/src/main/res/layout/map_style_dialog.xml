<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/s15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/s5dp"
            android:text="Map Styles"
            android:textColor="@color/orange"
            android:textSize="@dimen/s18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/lv_standard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="@dimen/s5dp"
                android:paddingBottom="@dimen/s5dp">

                <ImageView
                    android:layout_width="@dimen/s100dp"
                    android:layout_height="@dimen/s70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/standard" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Standard"
                    android:textColor="@color/black"
                    android:textSize="@dimen/s18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_silver"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/s5dp"

                >

                <ImageView
                    android:layout_width="@dimen/s100dp"
                    android:layout_height="@dimen/s70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/silver" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Silver"
                    android:textColor="@color/black"
                    android:textSize="@dimen/s18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_retro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/s5dp">

                <ImageView
                    android:layout_width="@dimen/s100dp"
                    android:layout_height="@dimen/s70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/retro" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Retro"
                    android:textColor="@color/black"
                    android:textSize="@dimen/s18sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/lv_dark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/s5dp">

                <ImageView
                    android:layout_width="@dimen/s100dp"
                    android:layout_height="@dimen/s70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/dark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Dark"
                    android:textColor="@color/black"
                    android:textSize="@dimen/s18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_night"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/s5dp">

                <ImageView
                    android:layout_width="@dimen/s100dp"
                    android:layout_height="@dimen/s70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/night" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Night"
                    android:textColor="@color/black"
                    android:textSize="@dimen/s18sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lv_satellite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/s5dp">

                <ImageView
                    android:layout_width="@dimen/s100dp"
                    android:layout_height="@dimen/s70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/satilite" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Satellite"
                    android:textColor="@color/black"
                    android:textSize="@dimen/s18sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/lv_hybrid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/s5dp">

                <ImageView
                    android:layout_width="@dimen/s100dp"
                    android:layout_height="@dimen/s70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/hybrid" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Hybrid"
                    android:textColor="@color/black"
                    android:textSize="@dimen/s18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_terrain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/s5dp">

                <ImageView
                    android:layout_width="@dimen/s100dp"
                    android:layout_height="@dimen/s70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/terrain" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Terrain"
                    android:textColor="@color/black"
                    android:textSize="@dimen/s18sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s10dp"
            android:layout_marginBottom="@dimen/s10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="@dimen/s20dp"
                android:paddingTop="@dimen/s10dp"
                android:paddingRight="@dimen/s20dp"
                android:paddingBottom="@dimen/s10dp"
                android:text="Cancel"
                android:textColor="@color/orange"
                android:textSize="@dimen/s18sp" />


            <TextView
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="@dimen/s20dp"
                android:paddingTop="@dimen/s10dp"
                android:paddingRight="@dimen/s20dp"
                android:paddingBottom="@dimen/s10dp"
                android:text="OK"
                android:textColor="@color/orange"
                android:textSize="@dimen/s18sp" />
            <!--</android.support.v7.widget.CardView>-->
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>