<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/orange"
            android:gravity="center"
            android:padding="@dimen/s5dp"
            android:text="Alert"
            android:textColor="@color/white"
            android:textSize="@dimen/s24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you want to Logout now?"
            android:textColor="@color/black"
            android:padding="@dimen/s10dp"
            android:layout_marginTop="@dimen/s15dp"
            android:textSize="@dimen/s18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/s10dp"
            android:layout_marginBottom="@dimen/s10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="@dimen/s20dp"
                android:paddingTop="@dimen/s10dp"
                android:paddingRight="@dimen/s20dp"
                android:paddingBottom="@dimen/s10dp"
                android:text="Yes"
                android:textColor="@color/orange"
                android:textSize="@dimen/s18sp" />


            <TextView
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="@dimen/s20dp"
                android:paddingTop="@dimen/s10dp"
                android:paddingRight="@dimen/s20dp"
                android:paddingBottom="@dimen/s10dp"
                android:text="No"
                android:textColor="@color/orange"
                android:textSize="@dimen/s18sp" />
            <!--</android.support.v7.widget.CardView>-->
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>